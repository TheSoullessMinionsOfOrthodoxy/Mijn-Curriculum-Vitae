
<div id="whitefont" style="background-color: none">
    <fieldset>
		<legend  style="font-size:14px;">&nbsp;@Curriculum.Voornaam&nbsp;@Curriculum.Tussenvoegsel&nbsp;@Curriculum.Achternaam&nbsp;</legend>
        <table>
			<tr>
				<td colspan="2">
				</td>
			</tr>
			<tr>
				<td colspan="2">
					@{
						string[] arr = new string[] { "fat.jpg", "hurley.jpg", "bontmuts.jpg", "asdas.jpg","wagner.jpg", "old.jpg","drevil.jpg","melferrel.jpg","fem.jpg", "son.jpg", "york.jpg", "austin.jpg", "mini.jpg"};
						int pic = Rand.getRandom.Next(0, arr.Count()); 
					}
					<input type="hidden" @bind="arr[pic]" /><img src=@arr[pic] alt="sss" />
				</td>
			</tr>
		</table>
	</fieldset>
	<br />
	<br />

	<fieldset>
		<legend style="font-size:14px"></legend>
		<table>
			<tr>
				<td>Leeftijd:</td>
				<td><input @bind="Curriculum.Leeftijd" /></td>
			</tr>
			<tr>
				<td>Telefoon:</td>
				<td><input @bind="Curriculum.Telefoon" /></td>
			</tr>
			<tr>
				<td>Email:</td>
				<td><input @bind="Curriculum.Email" /></td>
			</tr>
		</table>
	</fieldset>
</div>

@code {
	[CascadingParameter]
	public Curriculum Curriculum { get; set; }

	[CascadingParameter]
	public XMLData XmlData { get; set; }
}